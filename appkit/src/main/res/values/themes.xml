<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="Theme.AppKit" parent="android:Theme.Material.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="emptyViewLayout">@layout/appkit_empty</item>
		<item name="errorViewLayout">@layout/appkit_error</item>
		<item name="android:navigationBarColor">#000</item>

		<item name="appkitDefaultErrorText">Error</item>
		<item name="appkitRetryButtonText">Retry</item>
	</style>

	<style name="Theme.AppKit.Light" parent="android:Theme.Material.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="emptyViewLayout">@layout/appkit_empty</item>
		<item name="errorViewLayout">@layout/appkit_error</item>
		<item name="android:navigationBarColor">#000</item>

		<item name="appkitDefaultErrorText">Error</item>
		<item name="appkitRetryButtonText">Retry</item>
	</style>

</resources>